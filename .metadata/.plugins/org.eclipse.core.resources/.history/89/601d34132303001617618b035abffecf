package uno;

public class Main {
	
	private static int a=0;
	private final static int N=10;
	private static boolean libre=true;
	
	private static class Resta extends Thread{
		@Override
		public void run(){
			while(libre==false)
			{try {
				sleep(1);
			} catch (InterruptedException e) {
				// TODO Auto-generated catch block
				e.printStackTrace();
			}}
			libre=false;
			for(int i=0;i<N;i++){
				a--;
			}
			libre=true;
		}
	}
	
	private static class Suma extends Thread{
		@Override
		public void run(){
			while (libre==false)
			{try {
				sleep(1);
			} catch (InterruptedException e) {
				// TODO Auto-generated catch block
				e.printStackTrace();
			}}
			libre=false;
			for(int i=0;i<N;i++){
				a++;
			}
			libre=true;
		}
	}

	public static void main(String[] args) {
		
		Thread c= new Resta();
		Thread b = new Suma();
		c.start();
		b.start();
		System.out.println(a);
	}

}
